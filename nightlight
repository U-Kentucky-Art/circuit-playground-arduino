#include <Adafruit_CircuitPlayground.h>

int value;

void setup() {
  Serial.begin(9600);
  CircuitPlayground.begin();
}

void loop() {
  value = CircuitPlayground.lightSensor();
  
  Serial.print("Light Sensor: ");
  Serial.println(value);

  if(value < 120) {
    CircuitPlayground.setPixelColor(0, 0xFF00FF);
    CircuitPlayground.setPixelColor(1, 0xFF00FF);
    CircuitPlayground.setPixelColor(2, 0xFF00FF);
    CircuitPlayground.setPixelColor(3, 0xFF00FF);
    CircuitPlayground.setPixelColor(4, 0xFF00FF);
    CircuitPlayground.setPixelColor(5, 0xFF00FF);
    CircuitPlayground.setPixelColor(6, 0xFF00FF);
    CircuitPlayground.setPixelColor(7, 0xFF00FF);
    CircuitPlayground.setPixelColor(8, 0xFF00FF);
    CircuitPlayground.setPixelColor(9, 0xFF00FF);
  }
  else {
    CircuitPlayground.clearPixels();
  }
  
}
